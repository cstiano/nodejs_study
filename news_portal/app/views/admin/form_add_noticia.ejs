<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Formulário de cadastro de Notícia</title>
		</head>
	<body>

		<h1>Adicionar notícia</h1>
		<br />
		
		<% if(validacao){ %>
			<ul>
				<% for(var i = 0; i < validacao.length; i++){ %>
				<li>
					<%= validacao[i].msg %>
				</li>
				<% } %>
			</ul>
		<% } %>			

		<form action="/news/salvar" method="post">
			<label>Título</label>
			<input type="text" name="titulo" id="titulo" value="<%=noticia.titulo%>" placeholder="Titulo da noticia"/>
			<br />
			<label>Resumo</label>
			<input type="text" name="resumo" id="resumo" value="<%=noticia.resumo%>" placeholder="Resumo da noticia"/>
			<br />
			<label>Autor</label>
			<input type="text" name="autor" id="autor" value="<%=noticia.autor%>" placeholder="Autor da noticia"/>
			<br />
			<label>Data dos fatos</label>
			<input type="date" name="data_noticia" id="data_noticia" value="<%=noticia.data_noticia%>" placeholder="Data da noticia"/>
			<br />
			<label>Notícia</label>
			<textarea id="noticia" name="noticia" value="<%=noticia.noticia%>" rows="5" cols="30"></textarea>
			<br />
			<input type="submit" value="Enviar"/>
		</form>
	</body>
</html>